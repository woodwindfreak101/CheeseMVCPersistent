@model CheeseMVC.ViewModels.AddMenuItemViewModel

@{
    ViewBag.Title = "Add Item to Menu: " + Model.Menu.Name;
}

<h2>AddItem</h2>

<form asp-controller="Menu" asp-action="AddItem" method="post">


    <div class="form-group">
        <label asp-for="CheeseID">Cheese</label>
        <select asp-for="CheeseID" asp-items="Model.Cheeses"></select>
        <span asp-validation-for="CheeseID"></span>
    </div>


    <input type="hidden" name="MenuID" value="@Model.Menu.ID" />

    <input type="submit" value="Add Item" />
</form>